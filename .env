# Backend API URL (NestJS backend runs on port 3001)
VITE_API_URL=http://localhost:3001

# QSoftware Backend URL (Primary Authentication Service)
# This is the centralized authentication API for QSoftware applications
VITE_QSOFTWARE_API_URL=https://api.qsoftware.cloud/api

# Authentication Mode: Choose how users authenticate
# 'qsoftware' - Use QSoftware API (recommended, supports SSO and centralized auth)
# 'microsoft' - Direct Microsoft authentication (fallback mode)
# 'mock' - Mock authentication for development (bypasses Microsoft login)
VITE_AUTH_MODE=mock

# Mock Authentication Settings (only used when VITE_AUTH_MODE=mock)
# Choose mock user role: 'director', 'avp', 'manager', 'supervisor', 'team_lead', 'agent', 'unauthorized'
VITE_MOCK_USER_ROLE=director

# Azure AD Configuration (Required for Microsoft Authentication)
# Get these values from Azure Portal > App registrations > Your app
# Tutorial: https://learn.microsoft.com/en-us/azure/active-directory/develop/quickstart-register-app
VITE_DATAVERSE_CLIENT_ID=65e4ad2a-0971-4c38-aaf4-acf4f2e07740
VITE_DATAVERSE_TENANT_ID=938ee4fc-1f7d-4643-9a76-51d7cd0394d8

# Dataverse Configuration (optional, for Microsoft Dynamics integration)
VITE_DATAVERSE_URL=https://orgdf3b8790.api.crm.dynamics.com/api/data/v9.2

# SharePoint Configuration for Headcount List
# Example: https://yourcompany.sharepoint.com/sites/YourSite
VITE_SHAREPOINT_SITE_URL=https://onqops.sharepoint.com/sites/QNET-HR
# Name of the SharePoint list containing employee headcount data
VITE_SHAREPOINT_HEADCOUNT_LIST=https://onqops.sharepoint.com/sites/ONQ-MIS/Lists/EmployeeHeadCount/AllItems.aspx?env=WebViewList
# Name of the SharePoint list containing client assignments
VITE_SHAREPOINT_CLIENTS_LIST=https://onqops.sharepoint.com/sites/ONQ-MIS/Lists/ClientLogosdb/AllItems.aspx?env=WebViewList
